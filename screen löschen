Program  : clear screen Procedure
FileName : clrscr.asm
I/P 	 : Nill
O/P 	 : clears the screen
By       : Nina- htw dresden/Dozent
----------------------------------------

clrscr proc near
   mov ax,0b800h
   mov es,ax
   mov di,0
   mov al,' '
   mov ah,07d
   loop_clear_12:
        mov word ptr es:[di],ax
        inc di
        inc di
        cmp di,4000
        jle loop_clear_12
        ret
endp

